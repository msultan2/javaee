    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <configuration>
                    <webResources>
                        <resource>
                            <targetPath>templates/default</targetPath>
                            <directory>${basedir}/src/main/webapp/templates/default</directory>
                            <includes>
                                <include>common-banner.jsp</include>
                            </includes>
                            <filtering>true</filtering>
                        </resource>
                    </webResources>
                </configuration>
            </plugin>
            <!--Copying files to class path-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-resources-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-WEB-INF</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/classes</outputDirectory>
                            <resources>          
                                <resource>
                                    <directory>src/main/webapp/WEB-INF/</directory>
                                </resource>
                            </resources>              
                        </configuration>            
                    </execution>
                    <execution>
                        <id>copy-webdocs</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/classes/webdocs</outputDirectory>
                            <resources>          
                                <resource>
                                    <directory>src/main/webapp/</directory>
                                </resource>
                            </resources>              
                        </configuration>            
                    </execution>
                    <execution>
                        <id>copy-core/plugin/default-resources.properties</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/classes</outputDirectory>
                            <resources>          
                                <resource>
                                    <directory>src/main/webapp/WEB-INF/i18n/</directory>
                                </resource>
                            </resources>              
                        </configuration>            
                    </execution>
                    <execution>
                        <id>copy-test-resources</id>
                        <phase>validate</phase>
                        <goals>
                            <goal>copy-resources</goal>
                        </goals>
                        <configuration>
                            <outputDirectory>${basedir}/target/test-classes/tests/etc</outputDirectory>
                            <resources>          
                                <resource>
                                    <directory>src/test/resources</directory>
                                </resource>
                            </resources>              
                        </configuration>            
                    </execution>
                </executions>
            </plugin>
            <!--Copying template files to target folder-->
            <plugin>
                <groupId>com.coderplus.maven.plugins</groupId>
                <artifactId>copy-rename-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-jspwiki-properties</id>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>      
                        <configuration>
                            <fileSets>
                                <fileset>
                                    <sourceFile>${basedir}/target/test-classes/jspwiki.properties.tmpl</sourceFile>
                                    <destinationFile>${basedir}/target/test-classes/jspwiki.properties</destinationFile>
                                </fileset>
                                <fileset>
                                    <sourceFile>${basedir}/target/test-classes/jspwiki_rcs.properties.tmpl</sourceFile>
                                    <destinationFile>${basedir}/target/test-classes/jspwiki_rcs.properties</destinationFile>
                                </fileset>
                                <fileset>
                                    <sourceFile>${basedir}/target/test-classes/jspwiki_vers.properties.tmpl</sourceFile>
                                    <destinationFile>${basedir}/target/test-classes/jspwiki_vers.properties</destinationFile>
                                </fileset>
                                <fileset>
                                    <sourceFile>${basedir}/target/test-classes/tests/etc/groupdatabase.xml.tmpl</sourceFile>
                                    <destinationFile>${basedir}/tests/etc/groupdatabase.xml</destinationFile>
                                </fileset>
                                <fileset>
                                    <sourceFile>${basedir}/target/test-classes/tests/etc/userdatabase.xml.tmpl</sourceFile>
                                    <destinationFile>${basedir}/tests/etc/userdatabase.xml</destinationFile>
                                </fileset>
                                <fileset>
                                    <sourceFile>${basedir}/target/test-classes/tests/etc/userdatabase.xml.tmpl</sourceFile>
                                    <destinationFile>${basedir}/tests/etc/userdatabase.xml</destinationFile>
                                </fileset>
                                <fileset>
                                    <sourceFile>${basedir}/src/test/java/com/ecyrd/jspwiki/parser/creole.properties</sourceFile>
                                    <destinationFile>${basedir}/tests/com/ecyrd/jspwiki/parser/creole.properties</destinationFile>
                                </fileset>
                                <fileset>
                                    <sourceFile>${basedir}/src/main/resources/build.properties</sourceFile>
                                    <destinationFile>${basedir}/build.properties</destinationFile>
                                </fileset>
                            </fileSets>                            
                        </configuration>               
                    </execution>
                </executions>
            </plugin>
            <!--Delete tests/ directory from project folder-->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-clean-plugin</artifactId>
                <configuration>
                    <filesets>
                        <fileset>
                            <directory>${basedir}/tests</directory>
                        </fileset>
                    </filesets>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <includes>
                        <include>/com/ecyrd/jspwiki/attachment/*.java</include>
                        <include>/com/ecyrd/jspwiki/auth/login/*.java</include>
                        <include>/com/ecyrd/jspwiki/auth/permissions/*.java</include>
                        <include>/com/ecyrd/jspwiki/content/*.java</include>
                        <include>/com/ecyrd/jspwiki/dav/*.java</include>
                        <include>/com/ecyrd/jspwiki/diff/*.java</include>
                        <include>/com/ecyrd/jspwiki/filters/*.java</include>
                        <include>/com/ecyrd/jspwiki/htmltowiki/*.java</include>
                        <include>/com/ecyrd/jspwiki/parser/*.java</include>
                        <include>/com/ecyrd/jspwiki/render/*.java</include>
                        <include>/com/ecyrd/jspwiki/rss/*.java</include>
                        <include>/com/ecyrd/jspwiki/url/*.java</include>
                        <include>/com/ecyrd/jspwiki/util/*.java</include>
                        <include>/com/ecyrd/jspwiki/util/comparators/*.java</include>
                        <include>/com/ecyrd/jspwiki/workflow/*.java</include>
                        <include>/com/ecyrd/jspwiki/xmlrpc/*.java</include>
                    </includes>
                </configuration>
            </plugin>
            <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-javadoc-plugin</artifactId>
                    <configuration>
                        â€‚<excludePackageNames>com,org</excludePackageNames>
                    </configuration>
            </plugin>
        </plugins>
        <!--Substituting the properties files-->
        <filters>
            <filter>src/main/resources/build.properties</filter>
        </filters>
        <testResources>
            <testResource>
                <directory>src/main/webapp</directory>
                <includes>
                    <include>WEB-INF/web.xml</include>
                </includes>
            </testResource>
            <testResource>
                <directory>src/test/resources/</directory>
                <filtering>true</filtering>
            </testResource>
        </testResources>
    </build>
